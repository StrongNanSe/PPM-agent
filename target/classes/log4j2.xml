<?xml version="1.0" encoding="UTF-8"?>

<Configuration status="error" strict="true" >
	<Appenders>
		<Console name="STDOUT">
			<PatternLayout pattern="%5p [%c{1}] - %m%n" />
		</Console>
	</Appenders>
	
	<Loggers>
		<Logger name="kr.co.ppm.agent"
			level="debug" additivity="false">
			<AppenderRef ref="STDOUT" />
		</Logger>
		<Root level="error">
			<AppenderRef ref="STDOUT" />
		</Root>
	</Loggers>
</Configuration>